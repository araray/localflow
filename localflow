#!/usr/bin/env python3
"""LocalFlow command line entry point."""

import os
import sys
from pathlib import Path

def main():
    """Run LocalFlow CLI."""
    # Add package directory to path if running from source
    pkg_dir = os.environ.get('LOCALFLOW_DIR')
    if pkg_dir:
        pkg_path = str(Path(pkg_dir).resolve())
        sys.path.insert(0, pkg_path)
        
    try:
        from localflow.cli.main import cli
        cli()
    except ImportError as e:
        print(f"Error: Failed to import LocalFlow CLI: {e}", file=sys.stderr)
        sys.exit(1)
    except Exception as e:
        print(f"Error: {e}", file=sys.stderr)
        sys.exit(1)

if __name__ == '__main__':
    main()